<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="AnalizadorLexico.UI.Views.ArbolSintacticoView">
    <StackPanel Margin="30" Spacing="20">
        <TextBlock Text="Arbol Sintactico"
                  FontSize="24"
                  FontWeight="Bold"
                  Foreground="#FFFFFFFF"
                  HorizontalAlignment="Center"/>

        <TextBlock Text="Visualización gráfica del árbol de análisis sintáctico:"
                  FontSize="14"
                  Foreground="#4A5568"
                  HorizontalAlignment="Center"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10">
            <Button Name="ZoomInButton"
                    Content="+"
                    Padding="10,5"
                    Background="#3182CE"
                    Foreground="White"
                    BorderThickness="0"
                    CornerRadius="3"/>
            <Button Name="ZoomOutButton"
                    Content="-"
                    Padding="10,5"
                    Background="#3182CE"
                    Foreground="White"
                    BorderThickness="0"
                    CornerRadius="3"/>
            <Button Name="FitToScreenButton"
                    Content="Ajustar"
                    Padding="10,5"
                    Background="#38A169"
                    Foreground="White"
                    BorderThickness="0"
                    CornerRadius="3"/>
        </StackPanel>

        <Separator Background="#E2E8F0"/>

        <TabControl Name="TreeViewTabControl" Height="500">
            <TabItem Header="Vista Gráfica">
                <Border BorderBrush="#E2E8F0" BorderThickness="1" CornerRadius="5">
                    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                        <Canvas Name="TreeCanvas"
                               Background="#F7FAFC"
                               Width="800"
                               Height="600"
                               HorizontalAlignment="Center"/>
                    </ScrollViewer>
                </Border>
            </TabItem>

            <TabItem Header="Vista de Texto">
                <Border BorderBrush="#E2E8F0" BorderThickness="1" CornerRadius="5">
                    <ScrollViewer>
                        <TextBox Name="TreeTextView"
                                IsReadOnly="True"
                                TextWrapping="Wrap"
                                FontFamily="Consolas"
                                FontSize="12"
                                Background="Transparent"
                                BorderThickness="0"
                                Padding="10"/>
                    </ScrollViewer>
                </Border>
            </TabItem>

            <TabItem Header="Propiedades">
                <Border BorderBrush="#E2E8F0" BorderThickness="1" CornerRadius="5">
                    <ScrollViewer>
                        <StackPanel Spacing="10" Margin="10">
                            <TextBlock Text="Información del Árbol:" FontWeight="SemiBold" Foreground="#E2E8F0"/>
                            <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto" Margin="10,0">
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Nodos totales:" Margin="0,0,10,5" Foreground="#CBD5E0"/>
                                <TextBlock Name="TotalNodesText" Grid.Row="0" Grid.Column="1" Margin="0,0,0,5" Foreground="#E2E8F0"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Profundidad máxima:" Margin="0,0,10,5" Foreground="#CBD5E0"/>
                                <TextBlock Name="MaxDepthText" Grid.Row="1" Grid.Column="1" Margin="0,0,0,5" Foreground="#E2E8F0"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Rama más larga:" Margin="0,0,10,5" Foreground="#CBD5E0"/>
                                <TextBlock Name="LongestBranchText" Grid.Row="2" Grid.Column="1" Margin="0,0,0,5" Foreground="#E2E8F0"/>

                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Nodos hoja:" Margin="0,0,10,5" Foreground="#CBD5E0"/>
                                <TextBlock Name="LeafNodesText" Grid.Row="3" Grid.Column="1" Margin="0,0,0,5" Foreground="#E2E8F0"/>

                                <TextBlock Grid.Row="4" Grid.Column="0" Text="Tiempo de análisis:" Margin="0,0,10,0" Foreground="#CBD5E0"/>
                                <TextBlock Name="AnalysisTimeText" Grid.Row="4" Grid.Column="1" Foreground="#E2E8F0"/>
                            </Grid>
                        </StackPanel>
                    </ScrollViewer>
                </Border>
            </TabItem>
        </TabControl>

        <TextBlock Text="Leyenda:"
                  FontSize="14"
                  FontWeight="SemiBold"
                  Foreground="#2D3748"
                  Margin="0,10,0,5"/>

        <WrapPanel HorizontalAlignment="Center" Margin="0,20">
            <StackPanel Orientation="Horizontal" Spacing="5" Margin="10,0">
                <Border Width="20" Height="20" Background="#3182CE" CornerRadius="10"/>
                <TextBlock Text="Nodo Programa" VerticalAlignment="Center" Foreground="#E2E8F0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Spacing="5" Margin="10,0">
                <Border Width="20" Height="20" Background="#38A169" CornerRadius="10"/>
                <TextBlock Text="Asignación" VerticalAlignment="Center" Foreground="#E2E8F0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Spacing="5" Margin="10,0">
                <Border Width="20" Height="20" Background="#D69E2E" CornerRadius="10"/>
                <TextBlock Text="Expresión" VerticalAlignment="Center" Foreground="#E2E8F0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Spacing="5" Margin="10,0">
                <Border Width="20" Height="20" Background="#E53E3E" CornerRadius="10"/>
                <TextBlock Text="Estructura de Control" VerticalAlignment="Center" Foreground="#E2E8F0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Spacing="5" Margin="10,0">
                <Border Width="20" Height="20" Background="#805AD5" CornerRadius="10"/>
                <TextBlock Text="Declaración" VerticalAlignment="Center" Foreground="#E2E8F0"/>
            </StackPanel>
        </WrapPanel>
    </StackPanel>
</UserControl>