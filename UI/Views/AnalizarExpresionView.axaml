<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="AnalizadorLexico.UI.Views.AnalizarExpresionView">
    <StackPanel Margin="30" Spacing="20">
        <TextBlock Text="Analizar Expresion FORTRAN77"
                  FontSize="24"
                  FontWeight="Bold"
                  Foreground="#FFFFFFFF"
                  HorizontalAlignment="Center"/>

        <TextBlock Text="Ingresa una expresión, asignación o estructura de control FORTRAN77:"
                  FontSize="14"
                  Foreground="#4A5568"
                  TextWrapping="Wrap"
                  HorizontalAlignment="Center"/>

        <Border BorderBrush="#E2E8F0" BorderThickness="1" CornerRadius="5">
            <TextBox x:Name="InputExpression"
                    Height="80"
                    TextWrapping="Wrap"
                    FontFamily="Consolas"
                    FontSize="14"
                    Watermark="Ej: X = A + B * (C - D)"
                    Padding="10"
                    AcceptsReturn="True"/>
        </Border>

        <Button x:Name="BtnAnalyzeExpression"
                Content="Analizar Expresion"
                HorizontalAlignment="Center"
                Padding="20,10"
                Background="#3182CE"
                Foreground="White"
                BorderThickness="0"
                CornerRadius="5"
                FontSize="16">
            <Button.Styles>
                <Style Selector="Button:pointerover">
                    <Setter Property="Background" Value="#2C5282"/>
                </Style>
                <Style Selector="Button:pressed">
                    <Setter Property="Background" Value="#1A365D"/>
                </Style>
            </Button.Styles>
        </Button>

        <Separator Background="#E2E8F0"/>

        <TextBlock Text="Resultado del Análisis:"
                  FontSize="16"
                  FontWeight="SemiBold"
                  Foreground="#2D3748"/>

        <TabControl Name="ResultsTabControl" Height="400">
            <TabItem Header="Tokens">
                <Border BorderBrush="#E2E8F0" BorderThickness="1" CornerRadius="5">
                    <ScrollViewer>
                        <TextBox x:Name="OutputTokens"
                                IsReadOnly="True"
                                TextWrapping="Wrap"
                                FontFamily="Consolas"
                                FontSize="12"
                                Background="Transparent"
                                BorderThickness="0"
                                Padding="10"/>
                    </ScrollViewer>
                </Border>
            </TabItem>

            <TabItem Header="Árbol Sintáctico">
                <Border BorderBrush="#E2E8F0" BorderThickness="1" CornerRadius="5">
                    <ScrollViewer>
                        <TextBox x:Name="OutputSyntaxTree"
                                IsReadOnly="True"
                                TextWrapping="Wrap"
                                FontFamily="Consolas"
                                FontSize="12"
                                Background="Transparent"
                                BorderThickness="0"
                                Padding="10"/>
                    </ScrollViewer>
                </Border>
            </TabItem>

            <TabItem Header="Errores">
                <Border BorderBrush="#E2E8F0" BorderThickness="1" CornerRadius="5">
                    <ScrollViewer>
                        <TextBox x:Name="OutputErrors"
                                IsReadOnly="True"
                                TextWrapping="Wrap"
                                FontFamily="Consolas"
                                FontSize="12"
                                Background="Transparent"
                                BorderThickness="0"
                                Padding="10"/>
                    </ScrollViewer>
                </Border>
            </TabItem>
        </TabControl>

        <TextBlock Text="Ejemplos de expresiones válidas:"
                  FontSize="14"
                  FontWeight="SemiBold"
                  Foreground="#2D3748"
                  Margin="0,10,0,5"/>

        <Border BorderBrush="#E2E8F0" BorderThickness="1" CornerRadius="5" Background="#F7FAFC">
            <ScrollViewer Height="100">
                <TextBlock Name="ExamplesTextBlock"
                          FontFamily="Consolas"
                          FontSize="11"
                          Foreground="#4A5568"
                          Padding="10"
                          TextWrapping="Wrap"
                          Text="• X = 10&#10;• Y = A + B * C&#10;• IF (X .GT. 5) THEN&#10;• DO 100 I = 1, 10&#10;• INTEGER A, B, C&#10;• REAL PI = 3.14159"/>
            </ScrollViewer>
        </Border>
    </StackPanel>
</UserControl>