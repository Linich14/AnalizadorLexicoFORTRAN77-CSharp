<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:AnalizadorLexico.UI.Views"
             x:Class="AnalizadorLexico.UI.Views.CargarArchivoView">
    <Grid Margin="30" RowDefinitions="Auto,Auto,Auto,*">
        
        <!-- T칤tulo -->
        <TextBlock Text="An치lisis de Archivo FORTRAN77"
                  FontSize="24"
                  FontWeight="Bold"
                  Foreground="White"
                  HorizontalAlignment="Center"
                  Grid.Row="0"
                  Margin="0,0,0,20"/>

        <!-- Selector de archivo -->
        <Border BorderBrush="#4A5568" 
                BorderThickness="1" 
                CornerRadius="5" 
                Padding="15"
                Background="#2D3748"
                Grid.Row="1"
                Margin="0,0,0,15">
            <Grid RowDefinitions="Auto,10,Auto,15,Auto">
                <TextBlock Text="1. Selecciona un archivo para analizar:"
                          FontSize="14"
                          Foreground="#CBD5E0"
                          Grid.Row="0"/>
                
                <Grid Grid.Row="2" ColumnDefinitions="*,Auto,Auto">
                    <ComboBox x:Name="FilesCombo"
                             Grid.Column="0"
                             FontFamily="Consolas"
                             FontSize="12"
                             Background="#1A202C"
                             Foreground="White"
                             MinWidth="300">
                        <ComboBox.ItemTemplate>
                            <DataTemplate DataType="local:InformacionArchivo">
                                <TextBlock Text="{Binding Nombre}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    
                    <Button x:Name="RefreshBtn"
                           Content="游댃"
                           Grid.Column="1"
                           Margin="10,0,0,0"
                           Padding="10,5"
                           Background="#4A5568"
                           Foreground="White"
                           ToolTip.Tip="Refrescar lista de archivos"/>
                    
                    <Button x:Name="AnalyzeBtn"
                           Content="游댌 Analizar Archivo"
                           Grid.Column="2"
                           Margin="10,0,0,0"
                           Padding="15,8"
                           Background="#3182CE"
                           Foreground="White"
                           IsEnabled="False">
                        <Button.Styles>
                            <Style Selector="Button:pointerover">
                                <Setter Property="Background" Value="#2C5282"/>
                            </Style>
                        </Button.Styles>
                    </Button>
                </Grid>
                
                <TextBlock x:Name="FileInfoLabel"
                          Text="Selecciona un archivo de la carpeta 'input/'"
                          Grid.Row="4"
                          FontSize="11"
                          Foreground="#718096"/>
            </Grid>
        </Border>

        <!-- Separador -->
        <Separator Background="#4A5568" Grid.Row="2" Margin="0,0,0,15"/>

        <!-- Resultados con pesta침as -->
        <TabControl x:Name="TabResults" Grid.Row="3" Background="Transparent">
            <TabItem Header="C칩digo Fuente">
                <Border BorderBrush="#4A5568" BorderThickness="1" CornerRadius="5" Padding="10">
                    <ScrollViewer>
                        <TextBox x:Name="SourceCodeArea"
                                IsReadOnly="True"
                                TextWrapping="Wrap"
                                FontFamily="Consolas"
                                FontSize="12"
                                Background="Transparent"
                                Foreground="#E2E8F0"
                                BorderThickness="0"/>
                    </ScrollViewer>
                </Border>
            </TabItem>
            
            <TabItem Header="Tokens">
                <Border BorderBrush="#4A5568" BorderThickness="1" CornerRadius="5" Padding="10">
                    <ScrollViewer>
                        <TextBox x:Name="TokensArea"
                                IsReadOnly="True"
                                TextWrapping="Wrap"
                                FontFamily="Consolas"
                                FontSize="11"
                                Background="Transparent"
                                Foreground="#E2E8F0"
                                BorderThickness="0"/>
                    </ScrollViewer>
                </Border>
            </TabItem>
            
            <TabItem Header="츼rbol Sint치ctico">
                <Border BorderBrush="#4A5568" BorderThickness="1" CornerRadius="5" Padding="10">
                    <ScrollViewer>
                        <TextBox x:Name="TreeArea"
                                IsReadOnly="True"
                                TextWrapping="Wrap"
                                FontFamily="Consolas"
                                FontSize="11"
                                Background="Transparent"
                                Foreground="#E2E8F0"
                                BorderThickness="0"/>
                    </ScrollViewer>
                </Border>
            </TabItem>
            
            <TabItem Header="Mensajes">
                <Border BorderBrush="#4A5568" BorderThickness="1" CornerRadius="5" Padding="10">
                    <ScrollViewer>
                        <TextBox x:Name="MessagesArea"
                                IsReadOnly="True"
                                TextWrapping="Wrap"
                                FontFamily="Consolas"
                                FontSize="12"
                                Background="Transparent"
                                Foreground="#E2E8F0"
                                BorderThickness="0"/>
                    </ScrollViewer>
                </Border>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>