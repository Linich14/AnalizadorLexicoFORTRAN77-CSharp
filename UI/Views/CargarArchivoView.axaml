<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="AnalizadorLexico.UI.Views.CargarArchivoView">
    <StackPanel Margin="30" Spacing="20">
        <TextBlock Text="Cargar Archivo FORTRAN77"
                  FontSize="24"
                  FontWeight="Bold"
                  Foreground="#2D3748"
                  HorizontalAlignment="Center"/>

        <TextBlock Text="Selecciona un archivo .txt o .f77 para analizar:"
                  FontSize="14"
                  Foreground="#4A5568"
                  TextWrapping="Wrap"
                  HorizontalAlignment="Center"/>

        <Button Name="SelectFileButton"
                Content="Seleccionar Archivo"
                HorizontalAlignment="Center"
                Padding="20,10"
                Background="#3182CE"
                Foreground="White"
                BorderThickness="0"
                CornerRadius="5"
                FontSize="16">
            <Button.Styles>
                <Style Selector="Button:pointerover">
                    <Setter Property="Background" Value="#2C5282"/>
                </Style>
                <Style Selector="Button:pressed">
                    <Setter Property="Background" Value="#1A365D"/>
                </Style>
            </Button.Styles>
        </Button>

        <TextBlock Name="SelectedFileText"
                  Text="NingÃºn archivo seleccionado"
                  FontSize="12"
                  Foreground="#718096"
                  HorizontalAlignment="Center"
                  TextWrapping="Wrap"/>

        <Separator Background="#E2E8F0"/>

        <TextBlock Text="Contenido del Archivo:"
                  FontSize="16"
                  FontWeight="SemiBold"
                  Foreground="#2D3748"/>

        <Border BorderBrush="#E2E8F0" BorderThickness="1" CornerRadius="5">
            <ScrollViewer Height="300">
                <TextBox Name="FileContentTextBox"
                        IsReadOnly="True"
                        TextWrapping="Wrap"
                        FontFamily="Consolas"
                        FontSize="12"
                        Background="Transparent"
                        BorderThickness="0"
                        Padding="10"/>
            </ScrollViewer>
        </Border>

        <Button Name="AnalyzeFileButton"
                Content="Analizar Archivo"
                HorizontalAlignment="Center"
                Padding="15,8"
                Background="#38A169"
                Foreground="White"
                BorderThickness="0"
                CornerRadius="5"
                FontSize="14"
                IsEnabled="False">
            <Button.Styles>
                <Style Selector="Button:pointerover">
                    <Setter Property="Background" Value="#2F855A"/>
                </Style>
                <Style Selector="Button:pressed">
                    <Setter Property="Background" Value="#22543D"/>
                </Style>
            </Button.Styles>
        </Button>
    </StackPanel>
</UserControl>