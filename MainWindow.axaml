<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="clr-namespace:AnalizadorLexico.UI"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="700"
        x:Class="AnalizadorLexico.MainWindow"
        Title="Analizador Léxico y Sintáctico"
        Width="1200"
        Height="700"
        WindowStartupLocation="CenterScreen">
    <Grid ColumnDefinitions="Auto,*">
        <!-- Menú Lateral -->
        <ui:MenuLateral Grid.Column="0" x:Name="MenuLateral"/>

        <!-- Panel Principal -->
        <ui:PanelPrincipal Grid.Column="1" x:Name="PanelPrincipal"/>
    </Grid>
</Window>
